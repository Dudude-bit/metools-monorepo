{
  "openapi": "3.0.3",
  "info": {
    "title": "MeTools",
    "description": "Documentation to MeTools API",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "users"
        ],
        "operationId": "login",
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginData"
              }
            }
          },
          "required": true
        },
        "responses": {}
      }
    },
    "/logout": {
      "get": {
        "tags": [
          "controllers::users"
        ],
        "operationId": "logout",
        "responses": {}
      }
    },
    "/me": {
      "get": {
        "tags": [
          "users"
        ],
        "operationId": "me",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseMe"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "tags": [
          "users"
        ],
        "operationId": "signup",
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpData"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "required": [
          "status",
          "error"
        ],
        "properties": {
          "error": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "LoginData": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "ResponseMe": {
        "type": "object",
        "required": [
          "status",
          "data"
        ],
        "properties": {
          "data": {
            "$ref": "#/components/schemas/UserReturn"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "SignUpData": {
        "type": "object",
        "required": [
          "username",
          "email",
          "password",
          "repeat_password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "repeat_password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "UserReturn": {
        "type": "object",
        "required": [
          "id",
          "username",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "username": {
            "type": "string"
          }
        }
      }
    }
  }
}